<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSeminarioCic.Views.ViewGeneral.DetalleNotificaciones">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,0">
            <Label Text="{Binding Titulo}" TextColor="Black" FontSize="Large" HorizontalOptions="Center"/>
            <BoxView HeightRequest="1.5" Color="#c5c7c9"/>
            <Label Text="{Binding Subtitulo}" FontSize="Medium" HorizontalOptions="Start"/>
            <Label Text="{Binding Descripcion}" TextColor="Black" FontSize="Small" HorizontalTextAlignment="Start"/>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>