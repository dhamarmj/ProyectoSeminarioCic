<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSeminarioCic.Views.ViewAdmin.GenerarClave"
             Title="Generar Contraseña">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0"/>
        </OnPlatform>
    </ContentPage.Padding>
    <AbsoluteLayout>
        <StackLayout VerticalOptions="Center" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Label Text="Contraseña para Charlistas" FontSize="Large" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Con esta clave única se registran los Charlistas" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Text="Envía esta clave a los usuarios seleccionados" FontSize="Small" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry x:Name="ClaveResultado" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </StackLayout>
        <ActivityIndicator x:Name="BtnLoading"
                               Color="Black"
                               AbsoluteLayout.LayoutBounds="0.5,0.5,50,50" 
                               AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>
    
</ContentPage>