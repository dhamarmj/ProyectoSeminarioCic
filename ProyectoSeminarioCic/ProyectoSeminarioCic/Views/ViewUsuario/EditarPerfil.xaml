<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSeminarioCic.Views.ViewUsuario.EditarPerfil">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Editar Perfil" Font="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
            <Label Text="Llene los campos y luego presiones 'Aceptar'" Font="12" FontAttributes="Italic" HorizontalOptions="Center"/>
            <Entry Placeholder="Nombre de Usuario" x:Name="entrynomuser" IsSpellCheckEnabled="false"/>
            <Entry Placeholder="Contraseña" x:Name="entrycontrasegna" IsPassword="True"/>
            <Label Text="Rol" FontAttributes="Bold"/>
            <Editor x:Name="entryRol" HeightRequest="50" FontSize="Medium" IsSpellCheckEnabled="false"/>
            <Label Text="Ocupacion" FontAttributes="Bold"/>
            <Editor x:Name="entryOcupacion" HeightRequest="50" FontSize="Medium" IsSpellCheckEnabled="false"/>
            <Button Text="Aceptar" x:Name="btnaceptar" BorderRadius="10" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>