<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSeminarioCic.Views.ViewUsuario.PreguntasHome">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Padding="15,15" VerticalOptions="StartAndExpand">
            <Label x:Name="LblInsP" TextColor="Black" FontSize="Medium" VerticalOptions="Center"/>
            <Button x:Name="BtnPregunta" BorderRadius="20" Text="Enviar Pregunta" Clicked="Preguntar_Clicked"/>
            <Label x:Name="LblInsE" TextColor="Black" FontSize="Medium" VerticalOptions="Center"/>
            <Button x:Name="BtnEval" BorderRadius="20"  BorderColor="Gray"  Text="Evaluar Charla" Clicked ="Evaluar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>